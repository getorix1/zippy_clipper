//	run preview comman
//-------------------------------------

void     preview_run(char *tmp) {

	system(tmp);

	zippy_says1("Generating preview stream. It may take several seconds until "
		"the preview window appears. Please wait.\n");
	while (gtk_events_pending()) gtk_main_iteration();

	sleep(4);

	on_dismiss_zippy_says_clicked(NULL);

	return;

	}

